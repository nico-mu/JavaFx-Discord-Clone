         xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1">
    <padding>
        <Insets bottom="5.0" left="5.0" right="5.0" top="5.0"/>
    </padding>
    <ImageView fx:id="integrationImageView" fitHeight="32.0" fitWidth="32.0" pickOnBounds="true" preserveRatio="true">
        <HBox.margin>
            <Insets/>
        </HBox.margin>
    </ImageView>
    <Pane fx:id="integrationBadge" prefHeight="40.0" prefWidth="25.0" styleClass="integration-button-badge-default"/>
</fx:root>
