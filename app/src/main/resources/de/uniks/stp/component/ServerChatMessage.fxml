<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>
<?import javafx.geometry.Insets?>
<fx:root stylesheets="@../style/css/component/server-chat-message.css" type="HBox" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1">
<VBox>
   <children>
      <HBox alignment="BOTTOM_LEFT" prefHeight="28.0">
         <children>
            <Text fx:id="nameText" strokeType="OUTSIDE" strokeWidth="0.0" styleClass="name-text">
               <font>
                  <Font size="16.0" />
               </font>
            </Text>
            <Text fx:id="timestampText" strokeType="OUTSIDE" strokeWidth="0.0" styleClass="timestamp-text">
               <HBox.margin>
                  <Insets left="10.0" />
               </HBox.margin>
            </Text>
         </children>
      </HBox>
      <TextFlow fx:id="messageText" styleClass="message-text" />
   </children>
</VBox>

</fx:root>
