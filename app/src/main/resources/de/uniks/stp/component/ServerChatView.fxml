<?xml version="1.0" encoding="UTF-8"?>

<?import com.jfoenix.controls.JFXButton?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<?import de.uniks.stp.component.EmotePickerButton?>
<fx:root stylesheets="@../style/css/component/server-chat-view.css" type="VBox" xmlns="http://javafx.com/javafx/11.0.1"
         xmlns:fx="http://javafx.com/fxml/1">
    <VBox fx:id="chatViewContainer" styleClass="container" xmlns="http://javafx.com/javafx/11.0.1"
          xmlns:fx="http://javafx.com/fxml/1">
        <children>
            <ScrollPane fx:id="chatViewMessageScrollPane" prefHeight="400.0" prefWidth="600.0" styleClass="message-list"
                        VBox.vgrow="ALWAYS">
                <content>
                    <VBox id="chatVBox" fx:id="chatVBox" alignment="CENTER">
                        <children>
                            <JFXButton id="loadMessagesButton" fx:id="loadMessagesButton" prefHeight="26.0"
                                       prefWidth="300.0" styleClass="load-messages-button" text="%LBL_LOAD_MESSAGES"
                                       textFill="WHITE"/>
                            <VBox id="messageList" fx:id="messageList" prefHeight="200.0" prefWidth="100.0"/>
                        </children>
                    </VBox>
                </content>
            </ScrollPane>
            <HBox fx:id="chatViewControlsContainer" alignment="CENTER_RIGHT" prefHeight="15.0" prefWidth="200.0"
                  VBox.vgrow="SOMETIMES">
                <children>
                    <VBox id="chatViewMessageInput" fx:id="chatViewMessageInput" minHeight="40.0"
                          styleClass="message-input" HBox.hgrow="ALWAYS">
                        <HBox.margin>
                            <Insets/>
                        </HBox.margin>
                        <padding>
                            <Insets bottom="5.0" left="5.0" right="10.0" top="5.0"/>
                        </padding>
                    </VBox>
                    <JFXButton id="chatViewSubmitButton" fx:id="chatViewSubmitButton" minWidth="100.0" prefHeight="38.0"
                               prefWidth="110.0" styleClass="submit-button" text="%LBL_CHAT_SEND" textFill="WHITE"
                               HBox.hgrow="ALWAYS">
                        <HBox.margin>
                            <Insets left="10.0"/>
                        </HBox.margin>
                        <font>
                            <Font name="System Bold" size="12.0"/>
                        </font>
                    </JFXButton>
                </children>
                <VBox.margin>
                    <Insets top="30.0"/>
                </VBox.margin>
            </HBox>
        </children>
        <padding>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
        </padding>
    </VBox>
</fx:root>
