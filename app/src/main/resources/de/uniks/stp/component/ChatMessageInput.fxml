<?xml version="1.0" encoding="UTF-8"?>

<?import com.jfoenix.controls.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<fx:root fx:id="root" alignment="CENTER_RIGHT" maxHeight="100.0" prefHeight="40.0" prefWidth="200.0" type="HBox" VBox.vgrow="SOMETIMES" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1">
    <VBox.margin>
        <Insets top="10.0" />
    </VBox.margin>
    <VBox fx:id="chatViewMessageInput" maxHeight="150.0" styleClass="message-input" HBox.hgrow="ALWAYS">
        <padding>
            <Insets bottom="5.0" left="5.0" right="10.0" top="5.0" />
        </padding>
    </VBox>
    <JFXButton fx:id="chatViewSubmitButton" maxHeight="40.0" minHeight="40.0" minWidth="100.0" prefHeight="40.0" prefWidth="130.0" styleClass="submit-button" text="%LBL_CHAT_SEND" textFill="WHITE">
        <font>
            <Font name="System Bold" size="12.0" />
        </font>
    </JFXButton>
</fx:root>
