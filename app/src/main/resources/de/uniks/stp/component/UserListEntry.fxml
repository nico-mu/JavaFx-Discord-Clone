<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>

<fx:root maxWidth="450.0" styleClass="user-name-container" stylesheets="@../style/css/component/user-list.css" type="VBox" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1">
    <Label id="user-list-entry-label" fx:id="userNameLabel" styleClass="user-name" />
   <HBox spacing="5.0">
      <padding>
         <Insets left="10.0" />
      </padding>
      <ImageView fx:id="descriptionImageView" fitHeight="16.0" fitWidth="16.0" managed="false" pickOnBounds="true" preserveRatio="true" visible="false">
         <image>
            <Image url="@../img/spotify.png" />
         </image>
      </ImageView>
      <Label fx:id="descriptionLabel" styleClass="user-list-entry-description-label" />
   </HBox>
   <padding>
      <Insets bottom="3.0" left="12.0" top="3.0" />
   </padding>
</fx:root>
