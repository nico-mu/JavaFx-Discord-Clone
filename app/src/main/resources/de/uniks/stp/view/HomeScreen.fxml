<?xml version="1.0" encoding="UTF-8"?>

<?import com.jfoenix.controls.JFXButton?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<HBox maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" stylesheets="@../style/css/view/home.css" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1">
   <children>
      <VBox alignment="TOP_CENTER" maxWidth="210.0" minWidth="210.0" prefWidth="210.0" styleClass="active-chats" HBox.hgrow="ALWAYS">
         <children>
            <JFXButton id="toggle-online-button" alignment="CENTER" text="Online" textFill="WHITE">
               <VBox.margin>
                  <Insets top="30.0" />
               </VBox.margin>
            </JFXButton>
            <Label text="%LBL_DIRECT_MESSAGES" textFill="WHITE">
               <font>
                  <Font name="System Bold" size="14.0" />
               </font>
               <VBox.margin>
                  <Insets top="15.0" />
               </VBox.margin>
            </Label>
            <VBox id="direct-messages-container" maxWidth="210.0" minWidth="210.0" prefWidth="210.0" VBox.vgrow="ALWAYS" />
         </children>
      </VBox>
      <Pane maxWidth="10.0" minWidth="10.0" prefWidth="10.0" styleClass="mid-pane" HBox.hgrow="ALWAYS" />
      <VBox alignment="TOP_CENTER" minWidth="300.0" styleClass="online-users" HBox.hgrow="ALWAYS">
         <children>
            <Label id="home-screen-label" maxWidth="250.0" prefHeight="25.0" styleClass="available-users-label" text="%LBL_ONLINE_USERS" />
            <VBox id="online-users-container" VBox.vgrow="ALWAYS">
               <padding>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
               </padding>
            </VBox>
         </children>
      </VBox>
   </children>
</HBox>
